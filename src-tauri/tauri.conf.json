{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Audio Workshop",
  "version": "0.1.10",
  "identifier": "com.audio.workshop",
  "build": {
    "devUrl": "http://localhost:5055/",
    "frontendDist": "../vendor/audiomass/src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Audio Workshop",
        "width": 1200,
        "height": 800
      }
    ]
  },
  "bundle": {
    "active": true,
    "externalBin": [
      "binaries/yt-dlp",
      "binaries/ffmpeg",
      "binaries/ffprobe"
    ],
    "icon": [
      "icons/icon.ico"
    ],
    "targets": [
      "nsis",
      "msi"
    ]
  }
}

