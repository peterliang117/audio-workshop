{
  "identifier": "main-window",
  "description": "Allow running the yt-dlp sidecar for downloads.",
  "windows": [
    "main"
  ],
  "permissions": [
    "dialog:allow-open",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/yt-dlp",
          "cmd": "binaries/yt-dlp",
          "sidecar": true,
          "args": true
        },
        {
          "name": "yt-dlp-external",
          "cmd": "yt-dlp-x86_64-pc-windows-msvc.exe",
          "sidecar": false,
          "args": true
        },
        {
          "name": "yt-dlp-external-plain",
          "cmd": "yt-dlp.exe",
          "sidecar": false,
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "binaries/yt-dlp",
          "cmd": "binaries/yt-dlp",
          "sidecar": true,
          "args": true
        },
        {
          "name": "yt-dlp-external",
          "cmd": "yt-dlp-x86_64-pc-windows-msvc.exe",
          "sidecar": false,
          "args": true
        },
        {
          "name": "yt-dlp-external-plain",
          "cmd": "yt-dlp.exe",
          "sidecar": false,
          "args": true
        }
      ]
    }
  ],
  "commands": [
    "get_download_root",
    "set_download_root",
    "ensure_downloads_dir",
    "get_binaries_dir",
    "get_export_root",
    "set_export_root",
    "prepare_temp_audio",
    "write_binary_file",
    "export_black_video",
    "write_video_log",
    "append_video_trace",
    "write_download_log",
    "write_support_bundle",
    "export_audio_file",
    "write_meta_file",
    "read_downloaded_file",
    "find_latest_download"
  ]
}
